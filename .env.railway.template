# Railway 배포용 환경 변수 템플릿
# 이 값들을 Railway 프로젝트 설정에서 설정하세요

# ExcelApp (Next.js) 연동 설정
EXCELAPP_API_URL=https://your-excelapp-domain.com/api/training/pipedata
EXCELAPP_API_TOKEN=your-secure-excelapp-token
EXCELAPP_ENABLED=true

# ExcelApp-Rails 연동 설정
RAILS_API_URL=https://your-rails-domain.com/api/v1/pipedata
RAILS_API_TOKEN=your-secure-rails-token
RAILS_ENABLED=true

# 이중 동기화 설정
SYNC_BATCH_SIZE=50
SYNC_INTERVAL_HOURS=6
QUALITY_THRESHOLD=7.0
SYNC_MODE=continuous
PARALLEL_SEND=true

# AI API 설정 (PipeData 수집용)
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# 데이터베이스 설정
DATABASE_URL=sqlite:///data/combined_dataset.db

# Railway 플랫폼 설정
RAILWAY_ENVIRONMENT=production
PORT=8000

# 로깅 레벨
LOG_LEVEL=INFO

# 웹 스크래핑 설정
USER_AGENT=PipeData-Railway-Bot/1.0
REQUEST_DELAY=2
MAX_RETRIES=3

# 보안 설정
API_SECRET_KEY=your-secret-key-for-api-authentication

# 관리자 설정
ADMIN_TOKEN=your-super-secure-admin-token-here
DATA_RETENTION_DAYS=30

# 관리자 대시보드 설정
NEXT_PUBLIC_PIPEDATA_API_URL=https://your-pipedata-domain.railway.app